<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:id="@+id/movieImageView"
            app:layout_constraintEnd_toStartOf="@+id/newsTitle"/>

    <TextView
            android:id="@+id/movieTitle"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:lines="2"
            android:ellipsize="end"
            tools:text="Obama offers Hopeful VisionWhile Nothin nations fears"
            app:layout_constraintStart_toEndOf="@+id/movieImageView"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <RelativeLayout
            android:id="@+id/bottomLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/movieTitle"
            app:layout_constraintStart_toEndOf="@+id/movieImageView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="14dp">

        <TextView
                android:id="@+id/votesTextView"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_toLeftOf="@+id/dateTextView"
                android:lines="1"
                android:ellipsize="end"
                tools:text="Graham Spencer"/>

        <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                tools:text="05/06/2014"/>

    </RelativeLayout>

    <View
            android:layout_width="0dp"
            android:layout_height="1.5dp"
            android:alpha="0.2"
            android:background="@color/lightGray"
            app:layout_constraintTop_toBottomOf="@+id/bottomLayout"
            app:layout_constraintStart_toEndOf="@id/newsImageView"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"/>

</android.support.constraint.ConstraintLayout>